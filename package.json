{
  "name": "national-geographic-api",
  "version": "0.0.0-development",
  "description": "National Geographic API that can be used to retrieve the latest news, the latest photo of the day, with the ability to query historical news and historical photos.",
  "main": "dist/index.js",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "scripts": {
    "prebuild": "rimraf ./dist",
    "build": "babel --copy-files --ignore *.spec.js --out-dir dist src",
    "precommit": "npm test && npm run check-coverage",
    "commit": "git-cz",
    "prepush": "npm test",
    "check-coverage": "nyc check-coverage --statements 98 --branches 98 --functions 98 --lines 98",
    "report-coverage": "cat ./coverage/lcov.info | codecov",
    "test": "NODE_ENV=test standard --verbose && nyc --reporter=html --reporter=text --reporter=lcov -x **/**.spec.js mocha $(find src -name \"*.spec.js\") --require babel-register",
    "test-watch": "NODE_ENV=test standard --verbose && nyc --reporter=html --reporter=text --reporter=lcov -x **/**.spec.js mocha $(find src -name \"*.spec.js\") -w --require babel-register",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/crisboarna/national-geographic-api.git"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "standard": {
    "globals": [
      "describe",
      "it",
      "beforeEach"
    ]
  },
  "babel": {
    "presets": [
      "env"
    ],
    "env": {
      "test": {
        "plugins": [
          "istanbul"
        ]
      }
    }
  },
  "nyc": {
    "require": [
      "babel-register"
    ],
    "sourceMap": false,
    "instrument": false
  },
  "keywords": [
    "National",
    "Geographic",
    "API",
    "Photo",
    "News",
    "wrapper"
  ],
  "author": "Cristian Boarna <cristian.boarna@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/crisboarna/national-geographic-api/issues"
  },
  "homepage": "https://github.com/crisboarna/national-geographic-api#readme",
  "devDependencies": {
    "babel-cli": "6.26.0",
    "babel-plugin-istanbul": "4.1.5",
    "babel-preset-env": "1.6.1",
    "babel-register": "6.26.0",
    "chai": "4.1.2",
    "codecov.io": "0.1.6",
    "commitizen": "2.9.6",
    "cz-conventional-changelog": "2.1.0",
    "husky": "0.15.0-rc.2",
    "greenkeeper-lockfile": "1.13.2",
    "mocha": "5.0.1",
    "nyc": "11.4.1",
    "proxyquire": "1.8.0",
    "rimraf": "2.6.2",
    "standard": "11.0.0",
    "sinon": "4.3.0",
    "semantic-release": "^12.4.1"
  },
  "dependencies": {
    "request": "2.83.0"
  }
}
